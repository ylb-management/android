<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".CreateActivity">

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="请输入压力表信息:"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_CreateArea"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:hint="请输入地区"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_3" />

    <EditText
        android:id="@+id/et_CreateStation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:hint="请输入站点"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_CreateArea" />

    <EditText
        android:id="@+id/et_CreateId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:hint="请输入表号"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_CreateStation" />

    <EditText
        android:id="@+id/et_CreateIMEI"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:hint="请输入IMEI号"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_CreateId" />

    <EditText
        android:id="@+id/et_CreateIMSI"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:hint="请输入IMSI号"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_CreateIMEI" />

    <EditText
        android:id="@+id/et_CreateNote"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:hint="请输入备注"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_CreateIMSI" />

    <Button
        android:id="@+id/btn_Create"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:text="确认"
        android:textSize="20dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/et_CreateNote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>