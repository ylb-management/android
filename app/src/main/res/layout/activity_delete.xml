<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".DeleteActivity">

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="请输入压力表信息:"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_DeleteArea"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:hint="请输入地区"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_4" />

    <EditText
        android:id="@+id/et_DeleteStation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:hint="请输入站点"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_DeleteArea" />

    <EditText
        android:id="@+id/et_DeleteId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:hint="请输入表号"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/et_DeleteStation" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:text="确认"
        android:textSize="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@+id/et_DeleteId"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>