<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".NormalLoginActivity">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="请选择压力表信息:"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/sp_Area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_spinner"
        app:layout_constraintTop_toBottomOf="@+id/tv_1" />

    <Spinner
        android:id="@+id/sp_Station"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_spinner"
        app:layout_constraintTop_toBottomOf="@+id/sp_Area" />

    <Spinner
        android:id="@+id/sp_Id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_spinner"
        app:layout_constraintTop_toBottomOf="@+id/sp_Station" />

    <Button
        android:id="@+id/btn_SearchId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:text="查询"
        android:textSize="20dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@+id/sp_Id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>